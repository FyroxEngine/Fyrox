                        vec4 vertex = vec4(vertexPosition, 1.0);

                        mat4 m0 = fyrox_boneMatrices.matrices[int(boneIndices.x)];
                        mat4 m1 = fyrox_boneMatrices.matrices[int(boneIndices.y)];
                        mat4 m2 = fyrox_boneMatrices.matrices[int(boneIndices.z)];
